<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.TwoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:textColor="@color/A5"
            android:background="@color/A1"
            android:id="@+id/persegi"
            android:layout_width="334dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Persegi"
            android:textSize="20dp" />

        <Button
            android:textColor="@color/A5"
            android:background="@color/A2"
            android:id="@+id/persegipanjang"
            android:layout_width="334dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Persegi panjang"
            android:textSize="20dp" />

        <Button
            android:textColor="@color/A5"
            android:background="@color/A3"
            android:id="@+id/segitiga"
            android:layout_width="334dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="segitiga"
            android:textSize="20dp" />

        <Button
            android:textColor="@color/A5"
            android:background="@color/A4"
            android:id="@+id/lingkaran"
            android:layout_width="334dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="lingkaran"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>
